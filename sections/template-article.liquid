<article class="py-8">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex justify-center items-center">
          <div class="max-w-7xl flex flex-col items-center">
            <a
              href="{{ blog.url }}"
              class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold"
            >
              {{ blog.title }}
            </a>
            <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
          </div>
        </div>

      {% when 'article_author' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            {% if section.settings.enable_author %}
              <small>{{ article.author }}</small>
            {% endif %}
          </div>
        </div>

      {% when 'article_published_date' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            {% if section.settings.enable_published_date %}
              <time datetime="{{ article.published_at | date: format:"on_date" }}">
                {{- article.published_at | date: '%d-%m-%Y' -}}
              </time>
            {% endif %}
          </div>
        </div>

      {% when 'featured_image' %}
        <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden">
          {% if article.image != blank %}
            <img
              src="{{ article.image | img_url:"large" }}"
              alt="{{ article.image.alt }}"
              class="w-full h-80 md:h-96 object-cover object-center p-5"
            >
          {% else %}
            {% assign place_holder_image = 'lifestyle-2' %}
            {{ place_holder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
          {% endif %}
        </div>

      {% when 'article_content' %}
        <div class="flex items-center justify-center mt-5">
          <div class="max-w-5xl">
            {{ article.content }}
          </div>
        </div>
      {% else %}

    {% endcase %}
  {% endfor %}
</article>

{% if blog.comments_enabled? %}
  <div id="comments" class="my-8">
    {% if article.comments_count > 0 %}
      <div class="flex items-center justify-center"></div>
    {% else %}
      There are no comments in this article
    {% endif %}
  </div>
  <div id="comment_form" class="mb-8">
    {% form 'new_comment', article %}
      <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4 ">
        <div class="px-1  md:flex mb-3">
          <div class="px-3 md:w-1/2">
            <label for="comment_author" class="text-gray-700 font-medium uppercase text-xs mb-2"> Name </label>
            <input
              id="comment_author"
              name="comment[author]"
              type="text"
              class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
              placeholder="Rajesh Doe"
              required
            >
          </div>
          <div class="px-3 md:w-1/2">
            <label for="comment_email" class="text-gray-700 font-medium uppercase text-xs mb-2"> Email </label>
            <input
              id="comment_email"
              name="comment[email]"
              type="email"
              class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
              placeholder="rajesh@doe.com"
              required
            >
          </div>
        </div>
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <label for="comment_content" class="uppercase text-gray-700 font-medium text-xs mb-2">Comment</label>
            <textarea
              class="w-full text-gray-700 resize-none h-20 py-2 px-3 focus:outline-none border"
              name="comment[body]"
              id="comment_content"
              required
            >   </textarea>
          </div>
        </div>
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <input
              type="submit"
              class="w-full point-cursor px-4 py-2 border text-base font-medium text-white bg-gray-900 hover:bg-gray-500"
              value="Post comment"
            >
          </div>
        </div>
      </div>
    {% endform %}
  </div>
{% endif %}

{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "label": "Display Author Name",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumb Nail Image",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
