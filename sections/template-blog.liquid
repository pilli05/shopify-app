<div class="py-8">
  {% paginate blog.articles by section.settings.number_of_blog_posts %}
    <h1 class="text-3xl text-center">{{ blog.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {% for article in blog.articles %}
          <div class="w-full py-6 px-3 ">
            <div class="bg-white shadow-xl rounded-lg overflow-hidden">
              {% if article.image %}
                <img
                  src="{{ article.image  }}"
                  alt="{{ article.image.alt }}"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'w-20' }}
              {% endif %}
              <h1>{{ article.title }}</h1>
              {% if section.settings.show_descriptions %}
                {% if article.excerpt.size > 0 %}
                {% else %}
                  <p>{{ article.content | truncatewords: 20 | strip_html }}</p>
                {% endif %}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "blog",
  "settings": [
    {
      "type": "range",
      "id": "number_of_blog_posts",
      "step": 1,
      "min": 1,
      "max": 6,
      "label": "Blog posts per page",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_descriptions",
      "label": "Show article descriptions",
      "default": true
    }
  ]
}
{% endschema %}
