<div class="max-w-md">
  <div class="text-5xl font-bold m-4">
    {{ section.settings.title }}
  </div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_html }}</p>
  </div>
  <div class="my-4">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a
      href="{{ shop_url }}"
      class="px-4 py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 hover:text-white rounded-lg"
    >
      {{- section.settings.button_label -}}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "template-404",
  "tag": "section",
  "class": "flex justify-center items-center h-screen py-7 text-center",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "404",
      "label": "404 Heading Title"
    },
    {
      "type": "text",
      "id": "subtext_html",
      "default": "The page that you're looking for is not found",
      "label": "404 Subtext Title"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Back to homepage",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_url",
      "default": "/",
      "label": "Button URL"
    }
  ]
}
{% endschema %}
