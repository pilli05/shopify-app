<div class="flex flex-col items-center my-8">
   {% form 'contact' %}
    <div class="mx-auto flex justify-center items-center px-4 max-w-6xl">
        <div class="flex px-1 mb-3 ">
        <div class="px-3 md:w-1/2"> 
        <label for="conatct_name" class="uppercase text-xs text-gray-500 font-medium">Name</label>
        <input type="text" name="contact[name]" id="conatct_name" class="border py-3 px-4 mb-3 text-gray-700 w-full">
    </div>
        <div class="px-3 md:w-1/2">
            <label for="contact_email" class="uppercase text-xs text-gray-500 font-medium">Email Address</label>
            <input type="email" name="contact[email]" id="contact_email" class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>
        </div>
    </div>
   
   
    <label for="contact_message" class="uppercase text-xs text-gray-500 font-medium">Message</label>
    <textarea name="contact[body]" id="contact_message"></textarea>
    <input type="submit" value="Submit message">
   {% endform "contact" %}
</div>

{% schema %}
    {
        "name": "Contact Form",
        "presets": [
            {
            "name": "Contact Form"
            }
        ]
    }
{% endschema %}